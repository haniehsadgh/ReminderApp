<div class="container">
    <form action="/reminder/<%= reminderItem.id%>/edit" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="titleInput" placeholder="Title" name="title", value="<%= reminderItem.title %>">
      </div>
      <div class="form-group">
        <label for="datetime">Title</label>
        <input type="datetime-local" class="form-control" id="datetimeinput"  name="datetime", value="<%= reminderItem.date_time %>">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Description" name="description"><%= reminderItem.description %></textarea>
      </div>
      <div class="form-group">
        <label for="complete">Completed</label><br>
        <% if (reminderItem.completed == true) { %>
            <input type="radio" id="true" name="option" value="True" checked>
            <label for="true">True</label><br>
            <input type="radio" id="false" name="option" value="False">
            <label for="false">False</label><br>
        <% } else if (reminderItem.completed == false) { %>
            <input type="radio" id="true" name="completed" value="True">
            <label for="true">True</label><br>
            <input type="radio" id="false" name="completed" value="False" checked>
            <label for="false">False</label><br>
        <% } %>
      </div>
      <button type="update" class="btn btn-default">Update</button>
    </form>
  </div>